<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">    
    <TextView
        android:id="@+id/task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dip"
        android:textStyle="bold"
        android:textColor="#FFFFFF" 
        android:textSize="16sp"/>   
    <TextView
        android:id="@+id/task_typ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"      
        android:layout_marginLeft="12dip"  
        android:layout_toRightOf="@+id/task_name"
        android:textStyle="bold" 
        android:textColor="#FFFF00" 
        android:textSize="16sp"/>  
   <TextView
        android:id="@+id/task_cyl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:layout_toRightOf="@+id/task_typ" 
        android:layout_marginLeft="12dip"     
        android:textStyle="bold" 
        android:textColor="#FF0000" 
        android:textSize="16sp"/>       
    <TextView
        android:id="@+id/task_dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/task_cyl" 
        android:layout_marginLeft="12dip" 
        android:textStyle="bold" 
        android:textColor="#FFFFFF" 
        android:textSize="16sp"
        android:singleLine="true"/>  
     <TextView
        android:id="@+id/task_stime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/task_dist" 
        android:layout_marginLeft="12dip" 
        android:textStyle="bold" 
        android:textColor="#FFFFFF" 
        android:textSize="16sp"
        android:visibility="gone"
        android:singleLine="true"/>  
     <TextView
        android:id="@+id/task_etime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/task_stime" 
        android:layout_marginLeft="12dip" 
        android:textStyle="bold" 
        android:textColor="#FFFFFF" 
        android:textSize="16sp"
        android:visibility="gone"
        android:singleLine="true"/>  
      
</RelativeLayout>